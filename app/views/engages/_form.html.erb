<div class="well" style='background-color: #ca1f00;'>
  <%= simple_form_for [@job, @job.engages.build], url: job_engages_path(@job), remote: true,method: :post do | f | %>
    <div class="form-inputs">
      <%= f.input :content, placeholder: '지원할 내용을 입력하세요.', input_html: { rows: 5 } %>
      <%= f.input :shared_profile %>
    </div>

    <div class="form-actions">
      <%= f.submit class: 'btn btn-default' %>
    </div>
  <% end %>
</div>