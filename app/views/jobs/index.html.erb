<h1><%= t('views.jobs.index.listing_jobs') %></h1>

<div class="panel panel-default">
  <table class='table table-bordered table-hover table-condensed'>
    <thead>
      <tr>
        <th>글제목</th>
        <th>작성일</th>
        <th>자료작업</th>
      </tr>
    </thead>

    <tbody>
      <% @jobs.each do |job| %>
        <tr>
          <td><%= job.title %></td>
          <td><%= time_ago_in_words job.updated_at %>전</td>
          <td class='col-md-3 center'>
            <%= link_to t('views.common.show'), job, class:'btn btn-default btn-xs' %>
            <%= link_to t('views.common.edit'), edit_job_path(job), class:'btn btn-default btn-xs' %>
            <%= link_to t('views.common.destroy'), job, method: :delete, data: { confirm: 'Are you sure?' }, class:'btn btn-default btn-xs' %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>

<br>

<%= link_to t('views.jobs.index.new_job'), new_job_path, class: 'btn btn-default' %>
