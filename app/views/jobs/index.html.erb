<h1><%= t('views.jobs.index.listing_jobs') %></h1>

<div class="panel panel-default">
  <table class='table table-bordered table-hover table-condensed'>
    <thead>
      <tr>
        <th>글제목</th>
        <th>작성일</th>
      </tr>
    </thead>
    <tbody>
      <% @jobs.each do |job| %>
        <tr>
          <td><%= link_to job.title, job %> <small>(<%= job.engages.size %>)</small></td>
          <td><%= time_ago_in_words job.updated_at %>전</td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>

<br>

<%= link_to t('views.jobs.index.new_job'), new_job_path, class: 'btn btn-default' %>
