<li id="comment_<%= comment.id %>" class="comment">
  <%= comment.content %>
  <div class="status">
    <%= comment.user.email %> |
    <%= time_ago_in_words comment.created_at %>전
    <% if current_user.can_delete? comment %> |
      <%= link_to icon('remove', '삭제'), [comment.commentable, comment], remote: true, method: :delete, data: { confirm: 'Are you sure?'} %>
    <% end %>
  </div>
</li>