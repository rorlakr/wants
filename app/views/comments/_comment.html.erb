<li id="comment_<%= comment.id %>">
  <%= comment.content %>
  <div class="status">
    <%= comment.user.email %> |
    <%= time_ago_in_words comment.created_at %>전 |
    <%= link_to icon('remove', '삭제'), [comment.commentable, comment], remote: true, method: :delete, date: { confirm: 'Are you sure?'} %>
  </div>
</li>