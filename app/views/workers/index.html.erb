<h1><%= t('views.workers.index.listing_workers') %></h1>

<div class="panel panel-default">
  <table class='table table-bordered table-hover table-condensed'>
    <thead>
      <tr>
        <th class='col-md-8'>글제목</th>
        <th class='col-md-2'>현재상태</th>
        <th class='col-md-2'>작성일</th>
      </tr>
    </thead>

    <tbody>
      <% @workers.each do |worker| %>
        <tr>
          <td><%= link_to worker.title, worker %> <small>(<%= worker.engages.size %>)</small></td>
          <td class='center'><%= estatus worker.try(:engage_status).try(:started_status) %></td>
          <td title='<%= worker.created_at%>'><%= time_ago_in_words worker.created_at %>전</td>
        </tr>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>
<br>

<%= link_to t('views.workers.index.new_worker'), new_worker_path, class:'btn btn-default' %>
