<h1><%= t('views.workers.index.listing_workers') %></h1>

<div class="panel panel-default">
  <table class='table table-bordered table-hover table-condensed'>
    <thead>
      <tr>
        <th>글제목</th>
        <th>작성일</th>
        <th>자료작업</th>
      </tr>
    </thead>

    <tbody>
      <% @workers.each do |worker| %>
        <tr>
          <td><%= worker.title %></td>
          <td><%= time_ago_in_words worker.updated_at %>전</td>
          <td class='col-md-3 center'>
            <%= link_to t('views.common.show'), worker, class:'btn btn-default btn-xs' %>
            <%= link_to t('views.common.edit'), edit_worker_path(worker), class:'btn btn-default btn-xs' %>
            <%= link_to t('views.common.destroy'), worker, method: :delete, data: { confirm: 'Are you sure?' }, class:'btn btn-default btn-xs' %>
          </td>
        </tr>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>
<br>

<%= link_to t('views.workers.index.new_worker'), new_worker_path, class:'btn btn-default' %>
